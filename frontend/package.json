{
  "name": "transcendence-frontend",
  "version": "1.0.0",
  "description": "Frontend for the pong game using Babylon.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run tailwind:watch\"",
    "tailwind:watch": "tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --watch",
    "build": "vite build && tailwindcss -i ./src/styles/input.css -o ./dist/output.css",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@babylonjs/core": "^8.17.0",
    "@babylonjs/gui": "^8.17.0",
    "@babylonjs/inspector": "^8.17.0",
    "@babylonjs/loaders": "^8.17.0"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/google.accounts": "^0.0.14",
    "@types/node": "^20.11.20",
    "vite": "^5.4.0",
    "tailwindcss": "^3.4.4",
    "postcss": "^8.4.39",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2"
  },
  "author": "Antonio Limotta",
  "license": "MIT"
}
